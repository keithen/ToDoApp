<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.todoapp.ToDoActivity" >

    <ListView
        android1:id="@+id/lvItems"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/buttonAdd" >

    </ListView>

    <EditText
        android1:id="@+id/etNewItem"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentLeft="true"
        android1:layout_marginLeft="20dp"
        android1:layout_toLeftOf="@+id/buttonAdd"
        android1:ems="10"
        android1:hint="@string/add_hint" >

        <requestFocus />
    </EditText>

    <Button
        android1:id="@+id/buttonAdd"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:onClick="onAddItem"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentRight="true"
        android1:text="@string/add_button_label" />

</RelativeLayout>
